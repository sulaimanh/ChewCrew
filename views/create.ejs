<%- include("partials/header") -%>
<form action="/crews/createCrew" method="post" enctype="multipart/form-data">
  <div class="card card-body">
    <h2>Crew Name</h2>
    <input name="crewName" type="text" class="form-control" placeholder="Crew Name" required="true">
    <div class="mt-3">
      <label class="btn btn-primary">
        Upload Group Picture
        <input name="image" type="file" style="display: none;">
      </label>
    </div>
    <div class="mt-3">
      <h4>Add Crew Members</h4>
      <input type="text" placeholder="Crew Member Name (separate members with commas)" class="form-control" name="crewMembers">
    </div>
    <div class="mt-4">
      <h4>Description of the Crew</h4>
      <textarea placeholder="Description" class="form-control" name="crewDescription" rows="5" cols="30"></textarea>
    </div>
    <button type="" class="btn btn-success mt-3">Create</button>
  </div>
</form>
<%- include("partials/footer") -%>
