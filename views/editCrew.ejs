<%- include("partials/header") -%>


<div class="container-fluid">
  <form action="/create/submitEditCrew" method="post" enctype="multipart/form-data">
    <div class="card card-body">
      <h2><%= crew.name %></h2>
      <input name="crewName" type="text" class="form-control" placeholder="" value="<%= crew.name %>" required="true">
      <div class="mt-3">
        <label class="btn btn-primary">
          Upload Group Picture
          <input name="image" type="file" style="display: none;">
        </label>
      </div>
      <div class="mt-3">
        <h4>Add Crew Members</h4>
        <input type="text" placeholder="Crew Member Name (separate members with commas)" class="form-control" name="crewMembers">
      </div>
      <div class="mt-4">
        <h4>Description of the Crew</h4>
        <textarea placeholder="" class="form-control" name="description" rows="5" cols="30"><%= crew.description %></textarea>
      </div>
      <button type="submit" name="update" value="<%= crew._id %>" class="btn btn-success mt-3">Update Crew</button>
    </div>
  </form>
</div>

<%- include("partials/footer") -%>
